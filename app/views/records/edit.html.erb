<% content_for :form, 'records' %>
<div class="min-h-full">
  <div class="bg-red-700 pb-32">
    <header class="py-10">
       <div class="sm:flex sm:items-center mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-bold tracking-tight text-white">Modifica fisa de observatie clinica a pacientului: <%= "#{@record.patient.firstname} #{@record.patient.lastname}" %></h1>
        <div class="sm:flex-auto">
        </div>
        <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
          <%= link_to 'Inapoi la fisele de observatie clinica', records_path, class:'inline-flex items-center justify-center text-red-600 rounded-md border border-transparent bg-white px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-white-300 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 sm:w-auto' %>
        </div>
      </div>
    </header>
  </div>

  <main class="-mt-32">
    <div class="mx-auto max-w-7xl px-4 pb-12 sm:px-6 lg:px-8">
      <div class="rounded-lg bg-white px-5 py-6 shadow sm:px-6">
        <%= render "form", record: @record %>
      </div>
    </div>
  </main>
</div>