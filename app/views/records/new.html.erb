<% content_for :form, 'records' %>
<div class="min-h-full">
  <div class="bg-red-700 pb-32">
    <header class="py-10">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-bold tracking-tight text-white">Creare fisa clinica a <%= "#{@patient.sex == "M" ? "pacientului" : "pacientei"}: #{@patient.firstname} #{@patient.lastname}" %></h1>
      </div>
    </header>
  </div>

  <main class="-mt-32">
    <div class="mx-auto max-w-7xl px-4 pb-12 sm:px-6 lg:px-8">
      <div class="rounded-lg bg-white px-5 py-6 shadow sm:px-6">
        <%= render "form", record: @record, patient: @patient %>
      </div>
    </div>
  </main>
</div>